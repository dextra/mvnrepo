<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>br.mil.aer.sdab</groupId>
	<artifactId>acquisition-importer-web</artifactId>
	<packaging>war</packaging>
	<name>FAB SIA Acquisition Importer Web Module</name>
	<parent>
		<groupId>br.mil.aer.sdab</groupId>
		<artifactId>sia-servlets</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>br.mil.aer.sdab</groupId>
			<artifactId>acquisition-importer-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>br.mil.aer.sdab</groupId>
			<artifactId>common-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>br.mil.aer.sdab</groupId>
			<artifactId>sia-layout</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.tapestry</groupId>
			<artifactId>tapestry-core</artifactId>
			<version>${tapestry-release-version}</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.5</version>
				<configuration>
					<scanIntervalSeconds>10</scanIntervalSeconds>
					<contextPath>/sia/importer</contextPath>
					<jettyConfig>
						${basedir}/src/test/resources/jbossemb-jetty.xml
					</jettyConfig>
					<connectors>
						<connector
							implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8080</port>
						</connector>
					</connectors>
					<systemProperties>
						<property>
							<name>java.naming.factory.initial</name>
							<value>
								org.jnp.interfaces.LocalOnlyContextFactory
							</value>
						</property>
						<property>
							<name>java.naming.factory.url.pkgs</name>
							<value>
								org.jboss.naming:org.jnp.interfaces
							</value>
						</property>
					</systemProperties>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>br.com.dextra.jbossemb</groupId>
						<artifactId>dextra-jbossemb-servlet</artifactId>
						<version>1.0.0-SNAPSHOT</version>
					</dependency>
					<dependency>
						<groupId>br.mil.aer.sdab</groupId>
						<artifactId>
							acquisition-importer-ejb
						</artifactId>
						<version>${pom.version}</version>
					</dependency>
					<dependency>
						<groupId>br.mil.aer.sdab</groupId>
						<artifactId>sia-data</artifactId>
						<version>${pom.version}</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.tapestry</groupId>
				<artifactId>tapestry-component-report</artifactId>
				<version>${tapestry-release-version}</version>
				<configuration>
					<rootPackage>
						br.mil.aer.sdab.sia.importer.web
					</rootPackage>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
</project>
